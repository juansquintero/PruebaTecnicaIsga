    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Elimnar</h1>

<h3>¿Esta segur* que desea eliminar esta ciudad?</h3>
<div>
    <h4>Manejo de ciudades</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descripcion)
